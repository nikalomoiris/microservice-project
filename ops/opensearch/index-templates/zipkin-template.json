{
  "index_patterns": ["zipkin*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index": {
        "refresh_interval": "5s",
        "max_result_window": 10000
      }
    },
    "mappings": {
      "properties": {
        "traceId": {
          "type": "keyword",
          "ignore_above": 256
        },
        "id": {
          "type": "keyword",
          "ignore_above": 256
        },
        "parentId": {
          "type": "keyword",
          "ignore_above": 256
        },
        "name": {
          "type": "keyword",
          "ignore_above": 512
        },
        "kind": {
          "type": "keyword"
        },
        "timestamp": {
          "type": "long"
        },
        "duration": {
          "type": "long"
        },
        "localEndpoint": {
          "properties": {
            "serviceName": {
              "type": "keyword",
              "ignore_above": 256
            },
            "ipv4": {
              "type": "ip"
            },
            "port": {
              "type": "integer"
            }
          }
        },
        "remoteEndpoint": {
          "properties": {
            "serviceName": {
              "type": "keyword",
              "ignore_above": 256
            },
            "ipv4": {
              "type": "ip"
            },
            "port": {
              "type": "integer"
            }
          }
        },
        "tags": {
          "type": "object",
          "enabled": true
        },
        "annotations": {
          "type": "nested",
          "properties": {
            "timestamp": {
              "type": "long"
            },
            "value": {
              "type": "keyword"
            }
          }
        },
        "debug": {
          "type": "boolean"
        },
        "shared": {
          "type": "boolean"
        }
      }
    }
  }
}
